<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Contacts</h1>
        </div>
        <div class="card-body">
            {{#if Contacts}}
            <ul class="list-group">
              {{#each Contacts}}
                 <l1 class="list-group-item d-flex justify-content-between align-items-center">
                     {{firstname}}/
                     {{lastname}}/
                     {{email}}
                     <a href="/delete-contact/{{@key}}" class="btn btn-danger">
                        Eliminar
                     </a>
                     <a href="/update-contact/{{@key}}" class="btn btn-secondary">
                        Actualizar
                     </a>
                 </l1>
              {{/each}}

            </ul>
             
            {{else}}
            <p>No existen contactos todavía</p>
            {{/if}}
        </div>
        <div class="car-footer">
             <form action="/nuevo" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder= "Firtsname" class="form-control" autofocus>
                </div>
                                <div class="form-group">
                    <input type="text" name="lastname" placeholder= "Lastname" class="form-control">
                </div>
                                <div class="form-group">
                    <input type="text" name="email" placeholder= "Email" class="form-control">
                </div>

                <button class="btn btn-primary btn-block"> 
                  Añadir
                </button>
 
             </form>

        </div>
    </div>
</div>